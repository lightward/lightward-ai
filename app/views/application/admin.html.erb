<% content_for(:title) { "Lightward Admin" } %>
<% content_for(:experience) { "writer" } %>
<% content_for(:h1) { "Lightward Admin" } %>

<% content_for(:mode_switcher) do %>
  <div class="stack-horizontal">
    <div>→ <%= link_to(reader_name, :reader) %></div>
    <div>→ <%= link_to(writer_name, :writer) %></div>
  </div>
<% end %>

<table>
  <thead>
    <% User.column_names.each do |column_name| %>
      <th><%= column_name %></th>
    <% end %>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% User.column_names.each do |column_name| %>
          <td><%= user.send(column_name) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
